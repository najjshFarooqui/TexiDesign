
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/drawer_layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">


        <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <include layout="@layout/tool_bar"
                     android:id="@+id/tBar"/>

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_below="@+id/tBar"
                            android:id="@+id/mapView"
                            android:layout_height="wrap_content">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:app="http://schemas.android.com/apk/res-auto"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:id="@+id/map"
                          android:name="com.google.android.gms.maps.SupportMapFragment">


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/searchLayout"
                            android:layout_below="@+id/tBar">

                        <android.support.v7.widget.SearchView
                                android:id="@+id/pick"
                                android:background="@drawable/search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:iconifiedByDefault="false"
                                app:searchIcon="@null"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                app:queryHint="pickup from"/>

                        <android.support.v7.widget.SearchView
                                android:id="@+id/drop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/search"
                                app:iconifiedByDefault="false"
                                app:searchIcon="@null"
                                app:queryHint="Enter drop location"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_below="@+id/pick"/>
                    </RelativeLayout>
                </fragment>

                <LinearLayout
                        android:id="@+id/buttons"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_height="wrap_content">


                    <Button android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:text="Ride later"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/rectangular_curved"
                            android:layout_height="match_parent"/>

                    <Button android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:text="Ride now"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/rectangular_curved"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <android.support.design.widget.CoordinatorLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/btn_continue">

                    <include
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            layout="@layout/cab_selector"
                            android:id="@+id/cab_selector"
                            android:layout_margin="@dimen/_8sdp"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/_1sdp"/>

                </android.support.design.widget.CoordinatorLayout>


                <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/cab_selector"
                        android:id="@+id/cab_selector"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_above="@+id/btn_continue"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_1sdp"/>


                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_continue"
                        android:background="@drawable/rectangular_curved"
                        android:layout_alignParentBottom="true"
                        android:text="@string/continue_text"
                        android:textColor="@color/colorPrimary"
                        android:paddingTop="@dimen/_4sdp"
                        android:textSize="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_4sdp"/>


            </RelativeLayout>


        </RelativeLayout>

        <android.support.design.widget.NavigationView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:menu="@menu/drawer_view"
                android:layout_gravity="start"
                app:headerLayout="@layout/nav_header"
                android:id="@+id/nv">

        </android.support.design.widget.NavigationView>


    </android.support.v4.widget.DrawerLayout>





