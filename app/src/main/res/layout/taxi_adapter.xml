<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background=" #fbfcfc "
                android:layout_height="wrap_content">

    <ImageView android:layout_width="50dp"
               android:id="@+id/taxi_icon"
               android:src="@drawable/sedan"
               android:layout_height="50dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/taxi_icon"
              android:paddingTop="@dimen/_8sdp"
              android:text="@string/sedan"
              android:textSize="24sp"
              android:layout_marginLeft="@dimen/_10sdp"
              android:id="@+id/taxi_name"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="najish"
              android:layout_toLeftOf="@+id/taxi_name"
              android:id="@+id/taxi_time"
              android:layout_centerVertical="true"
              android:layout_marginRight="-237dp"/>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:padding="8dp"
               android:layout_marginRight="8dp"
               android:src="@drawable/ic_expand_more_black_24dp"/>


</RelativeLayout>